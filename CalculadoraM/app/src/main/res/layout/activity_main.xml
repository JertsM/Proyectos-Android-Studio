<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="#c0ebf0"
        tools:viewBindingIgnore="true">

        <TextView
            android:text="@string/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="70dp">

        </TextView>

        <!-- Primer texto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationY="60sp"
            android:translationX="-80sp"
            android:text="@string/input_first_data" />

        <!-- Cuadro de texto rellenable -->
        <EditText
            android:id="@+id/editText"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:ems="10"
            android:inputType="phone"
            android:translationX="60dp"
            android:translationY="15dp"
            android:textSize="20dp"
            tools:ignore="LabelFor,RtlSymmetry,SpUsage" />

        <!-- Segundo texto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationY="40dp"
            android:translationX="-75dp"
            android:text="@string/input_second_data" />

        <!-- Cuadro de texto rellenable -->
        <EditText
            android:id="@+id/editText2"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="9sp"
            android:autoSizeMinTextSize="10sp"
            android:autoSizeStepGranularity="5sp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:ems="10"
            android:inputType="phone"
            android:translationX="70dp"
            android:translationY="-5dp"
            android:textSize="20dp"
            tools:ignore="LabelFor,RtlSymmetry,SpUsage" />

        <RadioGroup
            android:id="@id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Primer botón: Sumar -->
            <RadioButton
                android:id="@+id/radioButtonSum"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:translationY="10dp"
                android:translationX="-155dp"
                android:text="Sumar"
                tools:ignore="HardcodedText" />

            <!-- Segundo botón: Restar -->
            <RadioButton
                android:id="@+id/radioButtonSubstract"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:translationY="0dp"
                android:translationX="-155dp"
                android:text="Restar"
                tools:ignore="HardcodedText" />

        </RadioGroup>

        <!-- Texto resultado-->
        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:translationY="-255dp"
            android:translationX="85dp"
            android:text="@string/resultado" />

        <!-- Cuadro de texto: Resultado -->
        <EditText
            android:id="@+id/editText3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:ems="10"
            android:inputType="phone"
            android:translationX="0dp"
            android:translationY="-300dp"
            android:textSize="20dp"
            tools:ignore="LabelFor,RtlSymmetry,SpUsage" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>